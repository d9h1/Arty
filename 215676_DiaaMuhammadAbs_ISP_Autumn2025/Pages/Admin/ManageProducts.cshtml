@page
@model _215676_DiaaMuhammadAbs_ISP_Autumn2025.Pages.Admin.ManageProductsModel
@{
    ViewData["Title"] = "Manage Products";
}

<div class="dashboard-container">
    <div class="dashboard-content admin-content">

        <aside class="dashboard-sidebar admin-sidebar">
            <a asp-page="/Admin/Dashboard" class="sidebar-link">Dashboard</a>
            <a asp-page="/Admin/ManageUsers" class="sidebar-link">Manage Users</a>
            <a asp-page="/Admin/ManageProducts" class="sidebar-link active">Manage Products</a>
            <a asp-page="/Admin/ManageCategories" class="sidebar-link">Manage Categories</a>
            <a asp-page="/Admin/ManageOrders" class="sidebar-link">Manage Orders</a>
        </aside>

        <main class="dashboard-main admin-main">
            <header class="admin-header">
                <h1>🖼️ Manage Products</h1>
                <p>Overview of all products on the platform, including items from all sellers.</p>
            </header>

            <div class="action-bar content-section-mini">
                <a asp-page="./CreateProduct" class="btn btn-primary add-new-btn">
                    <i class="fas fa-plus-circle"></i> Add New Product
                </a>
            </div>

            <div class="table-responsive content-section-mini">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Price ()</th>
                            <th>Stock Quantity</th>
                            <th>Seller</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@(item.Category?.Name ?? "N/A")</td>
                                <td>@item.Price.ToString("N2")</td>
                                <td>@item.StockQuantity</td>
                                <td>@(item.Seller?.UserName ?? "Deleted Seller")</td>
                                <td>
                                    <a asp-page="./EditProduct" asp-route-id="@item.Id" class="btn btn-action edit-btn" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this product: @item.Name?');" style="display: inline;">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-action delete-btn" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>